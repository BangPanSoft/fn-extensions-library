<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Reply"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:contentDescription="Contact photo"
        android:onClick="onImageClick" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_toRightOf="@+id/imgContact"
        android:layout_toLeftOf="@+id/btnCancel"
        android:maxLines="4"
        android:scrollbars="vertical"
	    android:fadeScrollbars="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
     <ImageButton
	        android:id="@+id/btnCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"    
	        android:layout_alignParentRight="true"
	        android:background="@drawable/cancel_light"
	        android:layout_gravity="center"
	        android:visibility="gone" />

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imgContact"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dip" >
	
        <EditText
	        android:id="@+id/etReply"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:maxLines="3"
	        android:layout_weight="1"
	        android:hint="Reply.."
	        android:inputType="textLongMessage"
	        android:textColor="#000000" />
	    
	    <ImageButton
	        android:id="@+id/btnExtra"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/cancel_light"
	        android:onClick="onExtraButtonClick"
	        android:layout_gravity="center"
	        android:visibility="gone" />
	    
	    <ImageButton
	        android:id="@+id/btnSend"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/send_light"
	        android:onClick="onReply"
	        android:layout_gravity="center" />
	
	</LinearLayout>
    
</RelativeLayout>